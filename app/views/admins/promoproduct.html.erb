<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Category Lists
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Product</a></li>
        <li class="active">Promo</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Promo Product</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <%= form_for(@homeitem) do |f| %>
              <div class="box-body">
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Fashion</label>
                  <%= f.text_field :text1, class: "form-control one" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Gadget</label>
                  <%= f.text_field :text2, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Kecantikan/Kesehatan</label>
                  <%= f.text_field :text3, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Bayi/Anak</label>
                  <%= f.text_field :text4, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Olahraga/Hobi</label>
                  <%= f.text_field :text5, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Rumah/Kebun/Dapur</label>
                  <%= f.text_field :text6, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk E-coupon</label>
                  <%= f.text_field :text7, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-6">
                  <label for="exampleInputEmail1">Produk Elektronik</label>
                  <%= f.text_field :text8, class: "form-control two" %>
                </div>
                <div class="form-group col-xs-12">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
              <!-- /.box-body -->

            <% end %>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<!-- page script -->
<% if notice.to_s.include? "Fee" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>