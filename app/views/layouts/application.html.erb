<% if params[:action] != "record" %>
<% if params[:controller] != "admins" %>
<!DOCTYPE html>
<html>
<head>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <% if params[:controller] == "produks" && params[:action] == "show" %>
  <title><%= @produk.nama_produk %></title>
  <meta name="description" content="<%= @produk.deskripsi %>">
  <meta name="keywords" content="<%= @produk.nama_produk %>">
   <% elsif params[:controller] == "statics" && params[:action] == "show" %>
  <title><%= @static.title %></title>
  <meta name="description" content="<%= @static.meta_description %>">
  <meta name="keywords" content="<%= @static.meta_keyword %>">
  <% else %>
  <title>Love It Mart | Marketplace</title>
  <% end %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/bootstrap.min.css" %>" />
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/jquery-ui.min.css" %>" />
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/sadaya.css" %>" />
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/responsive.css" %>" />
  <link href="<%= stylesheet_path "gayana/plagin/mobilenav/ma5-mobile-menu.css" %>" rel="stylesheet">
  <link rel="stylesheet" href="<%= stylesheet_path "gayana/plagin/tab/responsivetabs.css" %>" />
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/font-awesome.min.css" %>" />
  <link href="<%= stylesheet_path "gayana/plagin/rs-plugin/css/settingrevslider.css" %>" rel="stylesheet" type="text/css" media="screen" />
  <link href="<%= stylesheet_path "gayana/plagin/owl-carousel/owl.carousel.css" %>" rel="stylesheet">
  <link href="<%= stylesheet_path "gayana/plagin/owl-carousel/owl.theme.css" %>" rel="stylesheet">
  <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path "gayana/css/custom.css"%>" />
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_page?('/') %>
  <% else %>
    <% if user_signed_in? %>
      <%= render "layouts/headerloggedin" %>
    <% else %>
      <%= render "layouts/headerloggedout" %>
    <% end %>
  <% end %>
  <%= yield %>
</body>
</html>
<% else %>
<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Administrator</title>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <link href="<%= stylesheet_path "admin/bootstrap/css/notiny.css" %>" rel="stylesheet">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="<%= stylesheet_path "admin/bootstrap/css/bootstrap.min.css" %>" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="<%= stylesheet_path "admin/bootstrap/css/AdminLTE.min.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/_all-skins.min.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/blue.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/morris.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/jquery-jvectormap-1.2.2.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/datepicker3.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/daterangepicker-bs3.css" %>" rel="stylesheet">
    <link href="<%= stylesheet_path "admin/bootstrap/css/bootstrap3-wysihtml5.min.css" %>" rel="stylesheet">

    <%= csrf_meta_tags %>
  </head>
  <body data-no-turbolink="true" class="hold-transition skin-blue sidebar-mini">
    <%= yield %>
    <%= javascript_include_tag "admin/jquery-ui.min.js" %>
    <%= javascript_include_tag "admin/bootstrap.min.js" %>
    <%= javascript_include_tag "admin/bootstrap-datepicker.js" %>
    <%= javascript_include_tag "admin/bootstrap3-wysihtml5.all.min.js" %>
    <%= javascript_include_tag "admin/app.min.js" %>
    <%= javascript_include_tag "admin/notiny.js" %>
    <script>
      $(".textarea").wysihtml5();
      $('#datepicker').datepicker({
      autoclose: true
    });
    </script>


  </body>
</html>
<% end %>
<% else %>
<%= yield %>
<% end %>
