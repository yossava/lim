<%= render 'layouts/header' %>
<div id="topkeyword">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="mobilemenu-opener ma5-toggle-menu"><i class="fa fa-bars"></i></div>
						<%= render 'layouts/menumobile' %>
						<span id="labeltopkeyword">Top Keyword</span>
						<%= render 'layouts/topkey' %>
						<%= render 'layouts/trolimobile' %>
					</div>
				</div>
			</div>
		</div>

		<div id="nav-breadcumb">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="compresedmenu">
							<div class="headingcompresed">
								<i class="fa fa-bars"></i> &nbsp; <span>Kategori</span> &nbsp; <i class="fa fa-angle-down"></i>
							</div>
							<%= render 'layouts/sidemenu' %>
						</div>

            <%= render 'layouts/bread' %>
					</div>
				</div>
			</div>
		</div>
		<!-- ./Header -->

		<div class="spacermedium"></div>

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<button type="button" class="btn" id="btn-SHsidebar"><i class="fa fa-user" style="margin-right:1em;"></i> Member Menu</button>
				</div>
			</div>
			<div class="row">
        <%= render 'layouts/sidebar' %>
				<div class="col-md-9 col-sm-9 wrappermakctn">
					<%= render 'layouts/tabakun' %>
					<div class="row">
						<div class="col-md-12">
							<div class="headingmac">
								<h4>Tambah Rekening Bank</h4>
							</div>
						</div>
					</div>
					<div class="row">
            <% if notice %>
                <p id="notice"><%= notice %></p>
                <% end %>
            <%= form_for(@rekening) do |f| %>
						<div class="col-md-6">
							<div class="ctnblok-logreg">
								<div class="form-row has-error">
									<label for="nmalamat">Nama Akun / Pemilik</label>
									<input data-validation="alphanumeric" type="text" name="rekening[pemilik]" id="nmalamat" placeholder="" required>
									<!--<p><i class="fa fa-exclamation-triangle"></i> &nbsp;Isikan Username</p>-->
								</div>
								<div class="form-row">
									<label for="penerima">No. Rekening</label>
									<input data-validation="number" type="text" name="rekening[nomor_rekening]" id="penerima" placeholder="" required>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="ctnblok-logreg">
                <div class="form-row">
									<label for="prov">Nama Bank</label>
									<select name="rekening[nama_bank]" id="prov" required>
										<option value="">Pilih Bank</option>
										<option value="Mandiri">Mandiri</option>
										<option value="BCA">BCA</option>
										<option value="BNI">BNI</option>
									</select>
								</div>
								<div class="form-row">
									<label for="kdpos">Cabang</label>
									<input data-validation="alphanumeric" type="text" name="rekening[cabang]" id="kdpos" required>
									<p class="helpertext">* Contoh: KC jakarta citra 2 extension - Jakarta Barat</p>
								</div>
								<br>
							</div>
						</div>
            <div class="col-md-12">
              <input type="submit" name="" value="Simpan" class="gosignin" >
              <% end %>
              <a href="#" id="batalbtn">Batal</a>
            </div>
					</div><!-- row -->
				</div>
			</div>
		</div>

		<div class="spacerbig"></div>
    <%= render 'layouts/footer' %>
<script>
  $.validate();
</script>