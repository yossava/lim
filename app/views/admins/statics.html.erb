<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Static Pages

      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Static</a></li>
        <li class="active">Static Pages</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><a href="/admin/statics#newpage" class="btn btn-success">Halaman Baru</a></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th style="width:20px;" >ID Halaman</th>
                  <th>Judul</th>
                  <th>Group</th>
                  <th style="width:20px;" >Edit</th>
                  <th style="width:20px;" >Hapus</th>

                </tr>
                </thead>
                <tbody>
                  <% @statics.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.title %></td>
                  <td><%= u.group %></td>
                  <td><a class="btn btn-info btn-sm" href="/admin/statics/<%= u.id %>#static">EDIT</a></td>
                  <td><%= link_to "Hapus", admin_destroy_static_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}, :class =>  "btn btn-warning btn-sm" %>

</td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>ID Halaman</th>
                  <th>Judul</th>
                  <th>Group</th>
                  <th>Edit</th>
                  <th>Hapus</th>
                </tr>
                </tfoot>
              </table>
                  <div class="halaman">
                  <%= will_paginate @statics %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <% if params[:id] && params[:id] != "15" %>
      <a name="static">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Halaman: <%= @static.title %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <%= form_for(@static) do |f| %>
               <% @static.errors.full_messages.each do |message| %>
              <%= message %>
              <% end %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Judul</label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Group</label>
                  <%= f.text_field :group, class: "form-control" %>
                </div>
                <div style="padding:0px;" class="box-body pad">
                <textarea name="static[body]" class="textarea" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=raw @static.body %></textarea>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Meta Description</label>
                  <%= f.text_area :meta_description, class: "form-control", style: "height:100px;" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Meta Keywords | separated by " , " (comma)</label>
                  <%= f.text_field :meta_keyword, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Friendly Url | must be unique, separated by " - " (dashed)</label>
                  <%= f.text_field :slug, class: "form-control" %>
                </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </a>
      <% end %>
      <% if params[:id] == "15" %>
      <a name="static">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Halaman: <%= @static.title %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <%= form_for(@static) do |f| %>
               <% @static.errors.full_messages.each do |message| %>
              <%= message %>
              <% end %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Judul</label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Group</label>
                  <%= f.text_field :group, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Content</label>
                  <%= f.text_area :body, class: "form-control", rows: "15" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Meta Description</label>
                  <%= f.text_area :meta_description, class: "form-control", style: "height:100px;" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Meta Keywords | separated by " , " (comma)</label>
                  <%= f.text_field :meta_keyword, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Friendly Url | must be unique, separated by " - " (dashed)</label>
                  <%= f.text_field :slug, class: "form-control" %>
                </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </a>
      <% end %>

      <% if !params[:id] %>
      <a name="newpage">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Buat Halaman</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <div class="box-body">
               <%= form_for(@static) do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Judul</label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
            <div class="box-body pad">
                <textarea name="static[body]" class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
            </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>

              </div>
              <% end %>
              </div>
          </div>
        </div>
      </div>
      </a>
      <% end %>

      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<% if notice.to_s.include? "Halaman" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

