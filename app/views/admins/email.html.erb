<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Email List
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Email</a></li>
        <li class="active">Email Template</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th style="width:25px;">ID</th>
                  <th>Judul</th>
                  <th style="width:20px;">Edit</th>
                </tr>
                </thead>
                <tbody>
                  <% @homeitems.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.title %></td>
                  <td><a class="btn btn-primary btn-sm" href="/admin/email/<%= u.id %>">EDIT</a></td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Judul</th>
                  <th>Edit</th>
                </tr>
                </tfoot>
              </table>
                  <div class="halaman">
                  <%= will_paginate @homeitems %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <% if params[:id] == "20" || params[:id] == "22" || params[:id] == "23" || params[:id] == "24" || params[:id] == "25" || params[:id] == "26" || params[:id] == "27" || params[:id] == "28" %>
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Email Notification Template</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <%= form_for(@homeitem) do |f| %>
              <div class="box-body">
                <label style="color:orange;">FOR BUYER</label>
                <div class="form-group">
                  <label for="exampleInputEmail1"><%= @homeitem.title %></label>
                  <%= f.text_field :text2, class: "form-control", placeholder: "Subjek Email" %><br>
                  <%= f.text_area :text3, class: "form-control" , rows: "15" %>
                </div>
                <hr>
                <label style="color:orange;">FOR SELLER</label>
                <div class="form-group">
                  <label for="exampleInputEmail1"><%= @homeitem.title %></label>
                  <%= f.text_field :text4, class: "form-control", placeholder: "Subjek Email" %><br>
                  <%= f.text_area :text5, class: "form-control" , rows: "15" %>
                </div>
                <div class="form-group col-xs-12">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
              <!-- /.box-body -->

            <% end %>
          </div>
        </div>
      </div>
      <% end %>
       <% if params[:id] == "21" %>
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Email Notification Template</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <%= form_for(@homeitem) do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Konfirmasi Pendaftaran</label>
                  <%= f.text_area :text1, class: "form-control" , rows: "15" %>
                  <p><strong>User email:</strong> <%%= @email %> | <strong>Link Konfirmasi:</strong> <%%= link_to 'Konfirmasi', confirmation_url(@resource, confirmation_token: @token) %>
 </p>
                </div>
                <div class="form-group col-xs-12">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
              <!-- /.box-body -->

            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<!-- page script -->
<% if notice.to_s.include? "Fee" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>