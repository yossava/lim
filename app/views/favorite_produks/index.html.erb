<p id="notice"><%= notice %></p>

<h1>Listing Favorite Produks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Produk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_produks.each do |favorite_produk| %>
      <tr>
        <td><%= favorite_produk.user_id %></td>
        <td><%= favorite_produk.produk_id %></td>
        <td><%= link_to 'Show', favorite_produk %></td>
        <td><%= link_to 'Edit', edit_favorite_produk_path(favorite_produk) %></td>
        <td><%= link_to 'Destroy', favorite_produk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

