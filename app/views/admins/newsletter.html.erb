<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Newsletter Lists (<%= Newsletter.all.count %>)

      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Newsletter</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <%= link_to "Download CSV", newsletters_path(format: "csv"), class: "btn btn-success" %>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Email</th>
                  <th>Hapus</th>
                </tr>
                </thead>
                <tbody>
                  <% @newsletter.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.email %></td>
                  <td><%= link_to "Hapus", admin_destroy_newsletter_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}, :class => "btn btn-danger btn-sm"  %>

</td>

                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Email</th>
                  <th>Hapus</th>
                </tr>
                </tfoot>
              </table>
              <div class="halaman">
                  <%= will_paginate @newsletter %>
                  </div
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>

<% if notice.to_s.include? "Email" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

