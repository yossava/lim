<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Product Lists
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Products</a></li>
        <li class="active">Product Lists</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data User</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th style="width:10px;">ID Produk</th>
                  <th>Nama Produk</th>
                  <th>Nama Toko</th>
                  <th>Harga</th>
                  <th style="width:10px;">Jumlah Feedback</th>
                  <th style="width:10px;">Top Product</th>
                  <th style="width:10px;">Special Promo</th>
                  <th style="width:10px;">Recommended Product</th>
                </tr>
                </thead>
                <tbody>
                  <% @products.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.nama_produk %></td>
                  <td><%= Toko.find(u.toko_id).nama_toko %>
                  </td>
                  <td><%= u.harga_beli %></td>
                  <td><%= u.feedbacks.count %></td>
                  <% if u.top == false %>
                  <td bgcolor="#ffcccc" ><a href="/admin/topproduct/top/<%= u.id %>">NO</a></td>
                  <% else %>
                  <td bgcolor="#ccffcc" ><a href="/admin/topproduct/top/<%= u.id %>">YES</a></td>
                  <% end %>
                  <% if u.special == false %>
                  <td bgcolor="#ffcccc" ><a href="/admin/topproduct/special/<%= u.id %>">NO</a></td>
                  <% else %>
                  <td bgcolor="#ccffcc" ><a href="/admin/topproduct/special/<%= u.id %>">YES</a></td>
                  <% end %>
                  <% if u.recommended == false %>
                  <td bgcolor="#ffcccc" ><a href="/admin/topproduct/recommended/<%= u.id %>">NO</a></td>
                  <% else %>
                  <td bgcolor="#ccffcc" ><a href="/admin/topproduct/recommended/<%= u.id %>">YES</a></td>
                  <% end %>

</td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                 <th>ID Produk</th>
                  <th>Nama Produk</th>
                  <th>Nama Toko</th>
                  <th>Harga</th>
                  <th>Jumlah Feedback</th>
                  <th>Top Product</th>
                  <th>Special Promo</th>
                  <th>Recommended Product</th>
                </tr>
                </tfoot>
              </table>
                  <div class="halaman">
                  <%= will_paginate @products %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<!-- page script -->
<% if notice.to_s.include? "Top" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

