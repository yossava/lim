<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Stores Lists

      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Store</a></li>
        <li class="active">Store Lists</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data User</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>ID Halaman</th>
                  <th>Judul</th>
                  <th>Edit</th>
                  <th>Hapus</th>
                </tr>
                </thead>
                <tbody>
                  <% @homeitems.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.title %></td>
                  <td><a href="/admin/homepage/<%= u.id %>">EDIT</a></td>
                  <td><%= link_to "Hapus", admin_destroy_static_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}  %>

</td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>ID Halaman</th>
                  <th>Judul</th>
                  <th>Edit</th>
                  <th>Hapus</th>
                </tr>
                </tfoot>
              </table>
                  <div class="halaman">
                  <%= will_paginate @homeitems %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <% if params[:id] == "1" %>
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Halaman: <%= @homeitem.title %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <%= form_for(@homeitem) do |f| %>
               <% @homeitem.errors.full_messages.each do |message| %>
              <%= message %>
              <% end %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 1</label>
                  <%= f.file_field :img1, class: "form-control" %>
                  <% if @homeitem.img1.url %>
                  <%= image_tag @homeitem.img1 %>
                  <label>
                    <%= f.check_box :remove_img1 %>
                    Hapus Payment 1
                  </label>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 2</label>
                  <%= f.file_field :img2, class: "form-control" %>
                  <% if @homeitem.img2.url %>
                  <%= image_tag @homeitem.img2 %>
                  <label>
                    <%= f.check_box :remove_img2 %>
                    Hapus Payment 2
                  </label>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 3</label>
                  <%= f.file_field :img3, class: "form-control" %>
                  <% if @homeitem.img3.url %>
                  <%= image_tag @homeitem.img3 %>
                  <label>
                    <%= f.check_box :remove_img3 %>
                    Hapus Payment 3
                  </label>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 4</label>
                  <%= f.file_field :img4, class: "form-control" %>
                  <% if @homeitem.img4.url %>
                  <%= image_tag @homeitem.img4 %>
                  <label>
                    <%= f.check_box :remove_img4 %>
                    Hapus Payment 4
                  </label>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 5</label>
                  <%= f.file_field :img5, class: "form-control" %>
                  <% if @homeitem.img5.url %>
                  <%= image_tag @homeitem.img5 %>
                  <label>
                    <%= f.check_box :remove_img5 %>
                    Hapus Payment 5
                  </label>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Payment 6</label>
                  <%= f.file_field :img6, class: "form-control" %>
                  <% if @homeitem.img6.url %>
                  <%= image_tag @homeitem.img6 %>
                  <label>
                    <%= f.check_box :remove_img6 %>
                    Hapus Payment 6
                  </label>
                  <% end %>
                </div>


              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <% if params[:id] == "2" %>
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Halaman: <%= @homeitem.title %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <%= form_for(@homeitem) do |f| %>
               <% @homeitem.errors.full_messages.each do |message| %>
              <%= message %>
              <% end %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Content</label>
                  <%= f.text_area :description, class: "form-control", rows: "15" %>

                </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>

      <% if !params[:id] %>
      <a name="newpage">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Buat Kategori</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <div class="box-body">
               <%= form_for(@homeitem) do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Judul</label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
            <div class="box-body pad">
                <textarea name="homeitem[description]" class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
            </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>

              </div>
              <% end %>
              </div>
          </div>
        </div>
      </div>
      </a>
      <% end %>

      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<% if notice.to_s.include? "Item" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

